<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewExample.ListViewGroup">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label BackgroundColor="Black" TextColor="White" Text="PAISES"  FontSize="Large"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
            <ListView x:Name="ViewCountry" ItemsSource="{ Binding ListCountry }"
                      IsGroupingEnabled="True" GroupDisplayBinding="{ Binding Paises }">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{ Binding DisplayName }"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>